dnl Process this file with autoconf to produce a configure script.

AC_INIT(configure.in)
AM_INIT_AUTOMAKE(liferea, 0.4.2)
AM_CONFIG_HEADER(config.h)
AM_MAINTAINER_MODE

AC_ISC_POSIX
AC_PROG_CC
AM_PROG_CC_STDC
AC_HEADER_STDC

# hmm... I really have no clue which versions are neccessary!
pkg_modules="	gtk+-2.0 >= 2.0.0 
		gconf-2.0 >= 2.0.0 
		libxml-2.0 >= 2.0.0 
		libgtkhtml-2.0 >= 2.0.0
		gnome-vfs-2.0 >= 2.0.0"
		
# if you want to compile on RedHat you should change the
# dependencies to something like this
#
#pkg_modules="	gtk+-2.0 >= 2.0.0 
#		gconf2 >= 2.0.0 
#		libxml-2.0 >= 2.0.0 
#		gtkhtml2 >= 2.0.0
#		gnome-vfs2 >= 2.0.0"

PKG_CHECK_MODULES(PACKAGE, [$pkg_modules])
AC_SUBST(PACKAGE_CFLAGS)
AC_SUBST(PACKAGE_LIBS)

GETTEXT_PACKAGE=liferea
AC_SUBST(GETTEXT_PACKAGE)
AC_DEFINE_UNQUOTED(GETTEXT_PACKAGE,"$GETTEXT_PACKAGE")

uname=`uname`
AC_DEFINE_UNQUOTED(OS, "$uname", [defines a os version string, used for the user agent string])
AC_MSG_RESULT(user agent OS = $uname)

dnl Add the languages which your application supports here.
ALL_LINGUAS=""
AM_GLIB_GNU_GETTEXT

AC_OUTPUT([
Makefile
src/Makefile
po/Makefile.in
])

